<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/mycolorPrimaryDark"
                android:centerColor="@color/mycolorPrimaryDark"
                android:startColor="@color/mycolorPrimaryDark"
                android:angle="270" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/mycolorPrimary"
                android:centerColor="@color/mycolorPrimary"
                android:startColor="@color/mycolorPrimary"
                android:angle="270" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>